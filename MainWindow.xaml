<Window x:Class="ClaseComponenteVisual.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClaseComponenteVisual"
        xmlns:uc="clr-namespace:ClaseComponenteVisual.componentes"
        mc:Ignorable="d"
        Title="Prueba Componentes" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <uc:TextoLimitado Titulo="Asunto" LongitudTexto="20"/>
        <uc:TextoLimitado Titulo="Descripcion" LongitudTexto="50" Height="90" Grid.Row="1"/>
        <uc:TextoLimitado Titulo="Mensaje" LongitudTexto="350" Height="200" Grid.Row="2"/>
    </Grid>
</Window>
